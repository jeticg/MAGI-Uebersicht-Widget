run() {
    if [ ! -f Magi.widget/run.working ]; then
        touch Magi.widget/run.working
        ssh -o ConnectTimeout=4 -q me253.org exit
        sed -i -e "1s/.*/$?/"  Magi.widget/output
        ssh -o ConnectTimeout=4 -q md103.org exit
        sed -i -e "2s/.*/$?/"  Magi.widget/output
        ssh -o ConnectTimeout=4 -q jetic.org exit
        sed -i -e "3s/.*/$?/"  Magi.widget/output
        rm Magi.widget/run.working
    fi
}

run &>/dev/null &disown

cat Magi.widget/output
